;; See README

;;; Code:

(eval-when-compile
  (require 'cl))

;; Add the current directory to load-path
(add-to-list 'load-path (file-name-directory load-file-name))

(require 'ecukes-steps)
(require 'ecukes-init)
(require 'ecukes-def)
(require 'ecukes-output)
(require 'ecukes-parse)
(require 'ecukes-run)
(require 'ecukes-hooks)
(require 'ecukes-color)
(require 'ecukes-stats)
(require 'ecukes-misc)

(defvar ecukes-feature-files (ecukes-init-feature-files argv)
  "List containing all feature files.")

;; Load project
(ecukes-init-load-project argv)

;; Make sure there are feature files to run
(unless ecukes-feature-files
  (error "You did not provide any features"))

(setq debug-on-error t)
(setq debug-on-entry t)

(let ((features))
  (dolist (feature-file ecukes-feature-files)
    (let ((feature (ecukes-parse-feature feature-file)))
      (add-to-list 'features feature t 'eq))
    (let ((missing (ecukes-steps-missing features)))
      (if missing
          (ecukes-output-missing-steps missing)
        (ecukes-run-features features)))))

;;; ecukes.el ends here
